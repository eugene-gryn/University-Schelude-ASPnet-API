<Page x:Class="MainDesktop.UserProfilePage.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainDesktop.UserProfilePage"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="100"
      Title="ProfilePage">

    <StackPanel HorizontalAlignment="Center">
        <Label x:Name="LabelLoginName" HorizontalAlignment="Center">Name</Label>
        <Image x:Name="ImageOfUser" Height="100" Width="100" Margin="0, 5" Source="https://interactive-examples.mdn.mozilla.net/media/cc0-images/grapefruit-slice-332-332.jpg">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="MenuItem_Click" Header="Set link from clipboard"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
        <Button x:Name="UpdateImageButton" Click="UpdateImageButton_Click" Margin="0, 5">Update image</Button>
        <Separator Margin="0, 5"/>
        <Label x:Name="FileSheldueName" HorizontalAlignment="Center" Margin="0, 5" Content="Sheldue"/>
        <Button x:Name="LoadNewSheldueButton" Click="LoadNewSheldueButton_Click" Margin="0, 5">Load new</Button>

    </StackPanel>
</Page>
